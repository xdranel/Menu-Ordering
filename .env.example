# ChopChop Restaurant - VPS Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to Git!

# ===========================================
# Database Configuration
# ===========================================
DB_URL=jdbc:mysql://localhost:3306/restaurant_db?useSSL=false&serverTimezone=Asia/Jakarta&allowPublicKeyRetrieval=true
DB_USERNAME=chopchop_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# ===========================================
# Hibernate Configuration
# ===========================================
# Options: validate, update, create, create-drop, none
# Production: use 'validate' or 'none' (let Flyway handle migrations)
# Development/Demo: use 'update'
HIBERNATE_DDL_AUTO=update

# Show SQL queries in logs (disable in production for performance)
HIBERNATE_SHOW_SQL=false

# ===========================================
# Thymeleaf Configuration
# ===========================================
# Enable caching for better performance (disable in development)
THYMELEAF_CACHE=true

# ===========================================
# Logging Configuration
# ===========================================
# Log levels: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_APP=INFO

# ===========================================
# Flyway Migration Configuration
# ===========================================
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# ===========================================
# Server Configuration
# ===========================================
SERVER_PORT=8080

# ===========================================
# Security Configuration (Optional)
# ===========================================
# Session timeout in seconds (default: 8 hours = 28800)
# SERVER_SERVLET_SESSION_TIMEOUT=28800